<%= form_tag medicare_payments_path, method: :get, :class => "navbar-form pull right", id: "medicare_payments_search" do %>
<div class="row searchheader">
  <div class="col-md-6">
    <h1>Medicare Payment Data <small>2013</small></h1>
  </div>
  <div class="col-md-2 col-md-offset-3 search-query">
    <%= text_field_tag :search, params[:search], { :placeholder => "Search",:class=>"search-query" } %>
  </div>
  <div class="col-md-1">
    <button type="submit" class="btn btn-primary" value="search">Search</button>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-md-2 sidebar">
    <%= render 'filters_sidebar' %>
  </div>
  <div class="col-md-10">
    <table class="table table-striped table-condensed table-responsive">
      <tr>
        <th>Last / Org Name</th>
        <th>First Name</th>
        <th>M.I.</th>
        <th>Credentials</th>
        <th>Gender</th>
        <th>City</th>
        <th>State</th>
        <th>Provider Type</th>
        <th>HCPCS Code</th>
        <th>HCPCS Description</th>
        <th># of Services</th>
        <th>Avg Medicare Pmt Amt</th>
      </tr>

      <% @medicare_payments.each do |medicare_payment| %>
        <tr>
          <td nowrap><%= medicare_payment.provider_last_org_name %></td>
          <td nowrap><%= medicare_payment.provider_first_name %></td>
          <td nowrap><%= medicare_payment.provider_mi %></td>
          <td nowrap><%= medicare_payment.provider_credentials %></td>
          <td nowrap><%= medicare_payment.provider_gender %></td>
          <td nowrap><%= medicare_payment.provider_city %></td>
          <td nowrap><%= medicare_payment.provider_state %></td>
          <td><%= medicare_payment.provider_type %></td>
          <td nowrap><%= medicare_payment.hcpcs_code %></td>
          <td><%= medicare_payment.hcpcs_description %></td>
          <td nowrap><%= medicare_payment.line_srvc_cnt %></td>
          <td nowrap><%= medicare_payment.average_medicare_payment_amt %></td>
        </tr>
      <% end %>
      
    </table>

    <%= will_paginate @medicare_payments, renderer: BootstrapPagination::Rails %>
  </div>
</div>